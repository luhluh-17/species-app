<div id="<%= dom_id gallery %>">
  <% if action_name != "show" %>
    <%= link_to "Show this gallery", gallery, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_gallery_path(gallery), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
  <p>
    <strong>Description:</strong>
    <%= gallery.description %>
  </p>
  <%= image_tag gallery.image %>
</div>
