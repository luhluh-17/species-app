<div class="mx-auto md:w-5/6 w-full p-4 flex flex-row justify-between items-center block w-full p-6 mt-4 border-gray-200 rounded-lg shadow-sm bg-white border-white-700 hover:bg-red-100">
  <div>
    <p class="text-4xl font-bold tracking-tight text-gray">
      <%= current_user.first_name %> <%= current_user.last_name %> 
    </p>

    <p class="font-normal text-gray-700 dark:text-gray-600">
      <%= current_user.role %>
    </p>
    <p class="text-sm text-gray-700 dark:text-gray-600 italic">
      <%= current_user.email %>
    </p>

  </div>

  <div class="flex flex-row">
    <%= link_to 'Edit', edit_user_registration_path, class: "text-center rounded-lg py-3 px-5 ml-2 bg-red-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
</div>