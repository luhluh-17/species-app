<div class="mx-auto md:w-5/6 w-full">
  <hr class="my-6 border-red-700">
  <div>
    <p class="text-3xl font-bold tracking-tight text-gray">
      My Galleries
    </p>
    <div id="galleries" class="min-w-full mt-4 grid grid-cols-6 gap-6">
      <% current_user.galleries.each do |gallery| %>
        <%= link_to gallery, target: "_blank" do %>
          <div>
            <%= image_tag gallery.image, class: "w-32 h-32"  %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
