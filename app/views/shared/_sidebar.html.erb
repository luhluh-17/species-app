<div class="flex flex-col sticky top-0 items-center w-64 h-screen overflow-hidden text-white bg-red-800 rounded">

	<%= link_to dashboard_path, class: "flex items-center w-full px-3 mt-3" do %>
    <span class="ml-2 text-2xl font-semibold">ArkiBuhay</span>
  <% end %>

	<div class="w-full px-2">
		<!-- species navigation -->
		<div class="flex flex-col items-center w-full mt-3 border-t border-white">
			<%= link_to dashboard_path, class: sidebar_item_style do %>
				<%= render "icons/dashboard" %>
				<span class="ml-2 text-sm font-medium">Dashboard</span>
      <% end %>

			<%= link_to new_species_path, class: sidebar_item_style do %>
				<%= render "icons/plus-circle" %>
				<span class="ml-2 text-sm font-medium">Add Entry</span>
      <% end %>
		</div>

		<!-- account navigation -->
		<div class="flex flex-col items-center w-full mt-3 border-t border-white">
			<%= link_to dashboard_path, class: sidebar_item_style do %>
        <%= render "icons/account" %>
				<span class="ml-2 text-sm font-medium">Account</span>
      <% end %>

			<%= link_to destroy_user_session_path, class: sidebar_item_style, data: { turbo_method: :delete } do %>
        <%= render "icons/logout" %>
        <span class="ml-2 text-sm font-medium">Logout</span>
      <% end %>
		</div>
	</div>

</div>