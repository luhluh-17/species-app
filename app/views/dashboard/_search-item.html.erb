<%= link_to api_species_path(id: specie["key"]), class: "block w-full p-6 mt-4 border-gray-200 rounded-lg shadow-sm bg-white border-white-700 hover:bg-red-100" do %>
  <h5 class="mb-2 text-xl font-bold tracking-tight text-gray">
    <%= specie["canonicalName"] %>
  </h5>
  <p class="font-normal text-gray-700 dark:text-gray-600">
    <%= classification_formatter(specie["kingdom"], specie["phylum"], specie["order"], specie["class"], specie["family"], specie["genus"]) %>
  </p>
  <p class="font-normal text-gray-700 dark:text-gray-600">
    <%= varnacular_name_formatter(specie) %>
  </p>
<% end %>
