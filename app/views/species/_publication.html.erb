<div id="publications" class="min-w-full mt-4">
  <% @species.publications.each do |publication| %>
    <%= link_to publication do %>
      <div class="p-6 mt-4 border-gray-200 rounded-lg shadow-sm bg-white border-white-700 hover:bg-red-100">
        <div>
          <p class="text-2xl font-bold tracking-tight">
            <%= publication.title %>
          </p>
          <p class="mb-2 text-sm tracking-tight italic">
            <%= publication.publication_date %>
          </p>
        </div>
        <p class="mb-2 text-sm tracking-tight text-justify">
          <%= publication.summary %>
        </p>
        <%= link_to "Visit Site", publication.url, target: :_blank, class: "text-blue-500" %>
      </div>
    <% end %>
  <% end %>
</div>
